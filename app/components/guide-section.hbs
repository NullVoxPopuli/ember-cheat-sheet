{{#let (t (concat @id ".title")) as |sectionTitle|}}
  <section
    aria-labelledby={{@id}}
    data-test-section={{sectionTitle}}
  >
    <div local-class="title-container">
      <h2
        data-test-field="Section Title"
        id={{@id}}
        local-class="title"
      >
        {{sectionTitle}}
      </h2>

      <a
        href="#{{@id}}"
        local-class="permalink"
        title={{sectionTitle}}
      >
        {{t "component.guide-section.section"}}
      </a>
    </div>

    {{yield (component 'subsection' sectionId=@id)}}
  </section>
{{/let}}